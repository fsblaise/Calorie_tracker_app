<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/light_gray"
    >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/dark_gray"
        android:paddingTop="38dp"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="Calorie tracker"
        android:textAlignment="center"
        android:textColor="@color/teal_700"
        android:textSize="48dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="10dp"
            >

            <Button
                android:id="@+id/foodListButton"
                android:maxWidth="180dp"
                android:layout_width="130dp"
                android:minWidth="100dp"
                android:maxHeight="150dp"
                android:layout_height="100dp"
                android:minHeight="80dp"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toStartOf="@id/intakeButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:shadowColor="#000000"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
                android:textSize="12sp"
                app:backgroundTint="@null"
                android:background="@drawable/rectangle"
                android:onClick="goToFoodList"
                android:text="@string/list_of_foods" />

            <Button
                android:id="@+id/intakeButton"
                android:maxWidth="180dp"
                android:layout_width="130dp"
                android:minWidth="100dp"
                android:maxHeight="150dp"
                android:layout_height="100dp"
                android:minHeight="80dp"
                android:layout_margin="10dp"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/foodListButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:shadowColor="#000000"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
                app:backgroundTint="@null"
                android:background="@drawable/rectangle2"
                android:onClick="goToIntake"
                android:text="@string/my_daily_intake" />

            <Button
                android:id="@+id/registButton"
                android:maxWidth="180dp"
                android:layout_width="130dp"
                android:minWidth="100dp"
                android:maxHeight="150dp"
                android:layout_height="100dp"
                android:minHeight="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/rectangle3"
                android:onClick="goToRegist"
                android:shadowColor="#000000"
                android:textSize="12sp"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
                android:text="@string/registration"
                app:backgroundTint="@null"
                app:layout_constraintEnd_toStartOf="@+id/loginButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/foodListButton" />

            <Button
                android:id="@+id/loginButton"
                android:maxWidth="180dp"
                android:layout_width="130dp"
                android:minWidth="100dp"
                android:maxHeight="150dp"
                android:layout_height="100dp"
                android:minHeight="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/rectangle4"
                android:onClick="goToLogin"
                android:shadowColor="#000000"
                android:textSize="12sp"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
                android:text="@string/login"
                app:backgroundTint="@null"
                app:layout_constraintStart_toEndOf="@id/registButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/intakeButton" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/dark_gray"
        android:paddingTop="9dp"
        android:onClick="goToGithub"
        android:text="https://github.com/fsblaise"
        android:textAlignment="center"
        android:textSize="22dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
