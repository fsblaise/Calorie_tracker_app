<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/light_gray"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/dark_gray"
        android:paddingTop="38dp"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="Calorie tracker"
        android:textStyle="bold"
        android:textColor="@color/teal_700"
        android:textAlignment="center"
        android:textSize="48dp"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.417"
        tools:layout_editor_absoluteX="28dp">

        <Button
            android:id="@+id/foodListButton"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            app:backgroundTint="@null"
            android:background="@drawable/rectangle"
            android:backgroundTint="@color/transparent_blue"
            android:onClick="goToFoodList"
            android:text="@string/list_of_foods" />

        <Button
            android:id="@+id/intakeButton"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            app:backgroundTint="@null"
            android:background="@drawable/rectangle"
            android:backgroundTint="@color/pastel_orange"
            android:onClick="goToIntake"
            android:text="@string/my_daily_intake" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linear1"
        app:layout_constraintVertical_bias="0.599"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/registButton"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            app:backgroundTint="@null"
            android:background="@drawable/rectangle"
            android:backgroundTint="@color/pastel_green"
            android:onClick="goToRegist"
            android:text="@string/registration" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            app:backgroundTint="@null"
            android:background="@drawable/rectangle"
            android:backgroundTint="@color/pastel_red"
            android:onClick="goToLogin"
            android:text="@string/login" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp"
        android:background="@color/dark_gray"
        android:paddingTop="9dp"
        android:text="https://github.com/fsblaise"
        android:textSize="22dp"
        android:textAlignment="center"
        android:textStyle="italic"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
